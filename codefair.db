-- Inventory Table
CREATE TABLE Inventory (
    item_id INTEGER PRIMARY KEY,
    category TEXT NOT NULL, -- Deep Fry, Cooking, Accessories, Dry, Vegetables
    item_name TEXT NOT NULL,
    quantity INTEGER NOT NULL,
    unit TEXT, -- e.g., kg, liters, units
    price_per_unit REAL,
    supplier TEXT,
    last_updated DATE
);
